---
import ProjectCard from "../ProjectCard/ProjectCard.astro";
import ThematicSectionLayout from "../ThematicSectionLayout/ThematicSectionLayout.astro";
import projects from "../../../public/data/projects.json";

interface Project {
  img: string;
  projectName: string;
  usedTechnologies: string[];
  projectDescription: string;
  production: string;
  repoGitHub: string;
}
---

<ThematicSectionLayout id="projects" title="Projects" className="">
  <ul>
    {projects.map((project: Project) => <ProjectCard project={project} />)}
  </ul>
</ThematicSectionLayout>

<style>
  ul {
    display: flex;
    flex-wrap: wrap;
    gap: 40px;
  }
</style>
