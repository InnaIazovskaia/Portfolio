---
export interface Props {
  id: string;
  title: string;
  className: string;
}

const { id, title, className } = Astro.props;
---

<section id={id} class={className}>
  <h2>{title}</h2>
  <slot />
</section>

<style>
  h2 {
    text-align: center;
    margin-bottom: 25px;
    font-size: 2.5rem;
    font-weight: bold;
  }

  @media screen and (min-width: 600px) {
    h2 {
      text-align: left;
    }

    p {
      margin-top: 25px;
    }
  }
</style>
