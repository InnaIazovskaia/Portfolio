---
interface Project {
  img: string;
  projectName: string;
  usedTechnologies: string[];
  projectDescription: string;
  repoGitHub: string;
}

export interface Props {
  project: Project;
}

const {
  project: {
    img,
    projectName,
    usedTechnologies,
    projectDescription,
    repoGitHub,
  },
} = Astro.props;
---

<li class="project-card">
  <img src={img} alt={`image of project ${projectName}`} />
  <div class="info-wrapper">
    <h3>{projectName}</h3>
    <p>{projectDescription}</p>

    <ul class="stack-list">
      {
        usedTechnologies.map((usedTechnology) => (
          <li class="stack-item">{usedTechnology}</li>
        ))
      }
    </ul>
    <a href={repoGitHub} target="_blank">
      <img class="github-logo" src="images/github.svg" alt="logo github" />
    </a>
  </div>
</li>

<style>
  .project-card {
    font-weight: normal;
    display: flex;
    flex-direction: column;
    align-items: center;
    border-radius: 5px;
    box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;
    padding: 25px 10px;
  }

  .info-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  img {
    width: 90%;
    border-radius: 20px;
  }

  a {
    margin-top: 15px;
  }

  .github-logo {
    width: 35px;
    height: 35px;
  }

  h3 {
    font-size: 1.8rem;
    margin: 10px 0;
  }

  .stack-list {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    padding: 10px 0;
    gap: 10px;
    padding: 25px 0;
  }

  .stack-item {
    background-color: var(--background-color);
    border-radius: 20px;
    padding: 10px;
  }

  li {
    font-weight: bold;
  }

  @media screen and (min-width: 850px) {
    .project-card {
      flex-direction: row;
      gap: 15px;
    }

    .info-wrapper {
      height: 100%;
      align-items: flex-start;
      justify-content: space-between;
    }

    .stack-list {
      padding: 0;
    }

    img {
      width: 40%;
    }
  }
</style>
